#!/usr/bin/env bash

trap "exit 1" HUP INT QUIT TERM

set -e -u -o pipefail

CMD="$(basename $0)"
CMD_DIR="$(dirname $0)"
function usage {
    echo "Usage: $CMD [-hnv] fortran-file ..." 1>&2
    echo "-H        Print the heading only and exit." 1>&2
    echo "-h        Print this help message." 1>&2
    echo "-n        Dry run. Don't execute commands." 1>&2
    echo "-v        Verbose. Print extra information if appropriate." 1>&2
    echo "Print the statistics for the listed Fortran files." 1>&2
}

DRY_RUN=
VFLAG=
while getopts :Hhnv OPTCHAR; do
    case $OPTCHAR in
        b)  BFLAG=1
            BVAL="$OPTARG";;
        H)  echo "File,Lines,Directives,Continuations,Indented,fypp,#include,#define,\"#define M()\",#undef,#ifdef,#ifndef,#if,#elif,#else,#endif,#,##,Hollerith,#error,#warning,Uncategorized"
            exit 0;;
        h)  usage; exit 0;;
        n)  DRY_RUN=1;;
        v)  VFLAG=1;;
    esac
done

shift $(($OPTIND - 1))

case $# in
    0)  usage; exit 1;;
    *)  ;;
esac

for F in "$@"; do
    gawk -v SOURCE="$F" -f "$CMD_DIR"/fpp-stats.awk "$F"
done
